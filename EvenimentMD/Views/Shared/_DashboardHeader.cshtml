@using EvenimentMD.Domain.Models.User
@using EvenimentMD.BusinessLogic.DatabaseContext

@{
    bool isLoggedIn = false;
    UDbTable currentUser = null;

    // Verifica dace este cookie
    var cookie = Request.Cookies["X-KEY"];
    if (cookie != null)
    {
        string cookieValue = cookie.Value;
        if (!string.IsNullOrEmpty(cookieValue))
        {
            // Decodarea cookie-ului pentru a obține ID-ul utilizatorului
            try
            {
                // Extragerea informațiilor din cookie
                string decodedValue = EvenimentMD.Helper.Session.CookieGenerator.Validate(cookieValue);
                if (!string.IsNullOrEmpty(decodedValue))
                {
                    string[] parts = decodedValue.Split(new[] { System.Web.HttpContext.Current?.Request.UserHostAddress }, StringSplitOptions.None);
                    if (parts.Length > 0)
                    {
                        int userId;
                        if (int.TryParse(parts[0], out userId))
                        {
                            // Extragerea informațiilor utilizatorului din baza de date
                            using (var db = new UserContext())
                            {
                                currentUser = db.Users.FirstOrDefault(u => u.Id == userId);
                                if (currentUser != null)
                                {
                                    isLoggedIn = true;
                                }
                            }
                        }
                    }
                }
            }
            catch (Exception ex)
            {
                // Log error
                System.Diagnostics.Debug.WriteLine($"Error getting user data: {ex.Message}");
            }
        }
    }
}

