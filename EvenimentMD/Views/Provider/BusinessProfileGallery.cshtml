@{
    ViewBag.Title = "Prestator de servicii";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="container-fluid p-0">
    @Html.Partial("_BusinessProfileMenu")
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Galerie</h5>
                    <h6 class="card-subtitle text-muted">Adăugați sau eliminați fotografii din galerie.</h6>
                </div>
                <div class="card-body">
                    <!-- Upload Section -->
                    <h5 class="card-title mb-3">Poze</h5>
                    <div class="mb-4">
                        <div class="d-flex align-items-center">
                            <label for="galleryUpload" class="btn btn-primary">
                                <i class="bi bi-cloud-upload me-2"></i>Încarcă fotografii
                            </label>
                            <input type="file" id="galleryUpload" class="d-none" accept="image/*" multiple onchange="handleFileSelect(this)">
                            <span class="ms-3 text-muted">Pot fi selectate mai multe fotografii simultan</span>
                        </div>
                    </div>

                    <!-- Gallery Grid -->
                    <div id="galleryGrid" class="row g-3">
                        <!-- Uploaded images will appear here -->
                    </div>

                    <!-- Video Section -->
                    <hr class="my-4">
                    <h5 class="card-title mb-3">Videoclipuri</h5>
                    <div class="mb-4">
                        <div class="d-flex align-items-center">
                            <label for="videoUpload" class="btn btn-primary">
                                <i class="bi bi-camera-video me-2"></i>Încarcă videoclipuri
                            </label>
                            <input type="file" id="videoUpload" class="d-none" accept="video/*" multiple onchange="handleVideoSelect(this)">
                            <span class="ms-3 text-muted">Formate acceptate: MP4, WebM, MOV</span>
                        </div>
                    </div>

                    <!-- Video Grid -->
                    <div id="videoGrid" class="row g-3">
                        <!-- Uploaded videos will appear here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Dahboard/BussinessProfileGallery.js"></script>