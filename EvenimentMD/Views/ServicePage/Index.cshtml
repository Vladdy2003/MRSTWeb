@model EvenimentMD.Domain.Models.Provider.ProviderDbTable

<div class="container">
    <!-- Provider Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <!-- Provider title and info - desktop -->
            <div class="d-none d-lg-block">
                <h1 class="provider-title fw-bold">@Model.providerName</h1>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="rating me-3">
                            <span class="text-warning">★</span>
                            <span class="fw-medium">5 · 493 recenzii</span>
                        </div>
                    </div>
                    <div class="social-icons">
                        @if (!string.IsNullOrEmpty(Model.instagramURL))
                        {
                            <a href="@Model.instagramURL" target="_blank" class="btn btn-sm btn-outline-secondary rounded-circle">
                                <i class="bi bi-instagram"></i>
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.tiktokURL))
                        {
                            <a href="@Model.tiktokURL" target="_blank" class="btn btn-sm btn-outline-secondary rounded-circle">
                                <i class="bi bi-tiktok"></i>
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.facebookURL))
                        {
                            <a href="@Model.facebookURL" target="_blank" class="btn btn-sm btn-outline-secondary rounded-circle">
                                <i class="bi bi-facebook"></i>
                            </a>
                        }
                        <a href="#" class="btn btn-sm btn-outline-secondary rounded-circle"><i class="bi bi-share"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Provider Gallery Section -->
    <div class="row">
        <div class="col-lg-8 col-12 mb-3 mb-lg-0">
            <div class="position-relative">
                <img src="~/Resources/Home/decor.jpeg" class="img-fluid w-100 rounded" alt="Nume Prestator" width="1300" height="1625" style="object-fit: cover;">
                <!-- Button removed from here for desktop, but kept for mobile with d-lg-none -->
                <a href="#" class="btn-31 position-absolute bottom-0 end-0 m-3 d-lg-none">
                    <span class="text-container">
                        <span class="text">
                            <i class="bi bi-images"></i> Vezi toate pozele
                        </span>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-lg-4 d-none d-lg-block">
            <div class="row g-3">
                <div class="col-12">
                    <div class="position-relative">
                        <img src="~/Resources/Home/decor.jpeg" class="img-fluid w-100 rounded" alt="Nume Prestator" width="480" height="600" style="object-fit: cover;">
                    </div>
                </div>
                <div class="col-12">
                    <div class="position-relative">
                        <img src="~/Resources/Home/decor.jpeg" class="img-fluid w-100 rounded" alt="Nume Prestator" width="480" height="600" style="object-fit: cover;">
                        <!-- Added button here for desktop view -->
                        <a href="#" class="btn-31 position-absolute bottom-0 end-0 m-3">
                            <span class="text-container">
                                <span class="text">
                                    <i class="bi bi-images"></i> Vezi toate pozele
                                </span>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile header information - visible only on small screens -->
    <div class="d-lg-none mb-4 mt-3">
        <div class="d-flex align-items-center mb-4">
            <div class="social-icons">
                @if (!string.IsNullOrEmpty(Model.instagramURL))
                {
                    <a href="@Model.instagramURL" target="_blank" class="btn btn-sm btn-outline-secondary rounded-circle">
                        <i class="bi bi-instagram"></i>
                    </a>
                }
                @if (!string.IsNullOrEmpty(Model.tiktokURL))
                {
                    <a href="@Model.tiktokURL" target="_blank" class="btn btn-sm btn-outline-secondary rounded-circle">
                        <i class="bi bi-tiktok"></i>
                    </a>
                }
                @if (!string.IsNullOrEmpty(Model.facebookURL))
                {
                    <a href="@Model.facebookURL" target="_blank" class="btn btn-sm btn-outline-secondary rounded-circle">
                        <i class="bi bi-facebook"></i>
                    </a>
                }
                <a href="#" class="btn btn-sm btn-outline-secondary rounded-circle"><i class="bi bi-share"></i></a>
            </div>
        </div>
        <h1 class="provider-title h3 fw-bold">@Model.providerName</h1>
        <div class="rating mb-1">
            <span class="text-warning">★</span>
            <span class="fw-medium">5 · 493 recenzii</span>
        </div>

        <!-- Mobile contact and schedule section -->
        <div class="card border-0 shadow-sm rounded-4 mb-4">
            <div class="card-body p-3">
                <h4 class="mb-3 fw-bold">Contacte</h4>
                <div class="d-flex align-items-center mb-3">
                    <div class="me-3">
                        <i class="bi bi-telephone"></i>
                    </div>
                    <div>
                        <span>+373 @Model.phoneNumber</span>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-3">
                    <div class="me-3">
                        <i class="bi bi-envelope"></i>
                    </div>
                    <div>
                        <span>@Model.email</span>
                    </div>
                </div>

                <a href="#" class="btn-31 booking-btn mb-2">
                    <span class="text-container">
                        <span class="text"><i class="bi bi-calendar-check me-2"></i>Rezervă</span>
                    </span>
                </a>
            </div>
        </div>
    </div>

    <!-- Main content section -->
    <div class="row mt-4">
        <!-- Left Column - About and Services -->
        <div class="col-lg-8 mb-4 mb-lg-0">
            <!-- About Section -->
            <div class="card mb-4 border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h2 class="mb-3 fw-bold">Despre noi</h2>
                    <div class="about-content">
                        @Html.Raw(Model.description)
                    </div>

                    <!-- Mobile-only "Show more" button -->
                    <div class="d-lg-none text-center mt-3">
                        <button class="btn btn-link">Afișați mai multe</button>
                    </div>
                </div>
            </div>

            <!-- Services Section -->
            <div class="card mb-4 border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="tab-content" id="servicesTabsContent">
                        <div class="tab-pane fade show active" id="all-services" role="tabpanel" aria-labelledby="all-tab">
                            <h5 class="mb-3">Servicii</h5>

                            <!-- Service Item -->
                            <div class="service-item border rounded p-3 mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1 fw-bold">Nume Serviciu</h5>
                                        <div class="d-flex align-items-center">
                                            <span class="fw-bold">300 MDL</span>
                                        </div>
                                    </div>
                                    <button class="learn-more">
                                        <span class="circle" aria-hidden="true">
                                            <span class="icon arrow"></span>
                                        </span>
                                        <span class="button-text">Rezervă</span>
                                    </button>
                                </div>
                            </div>

                            <!-- Show More Services Button -->
                            <div class="text-center mt-4">
                                <button class="btn btn-outline-secondary">
                                    <i class="bi bi-chevron-down me-2"></i>
                                    Vezi toate serviciile
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reviews Section -->
            <div class="card mb-4 border-0 shadow-sm rounded-4" id="reviews">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
                        <h2 class="mb-0 fw-bold">Recenzii</h2>
                        <div class="d-flex align-items-center flex-wrap">
                            <div>
                                <span class="text-warning me-1">★</span>
                                <span class="fw-medium">5 · 493 recenzii</span>
                            </div>
                            <a href="#" class="btn-31 review-btn">
                                <span class="text-container">
                                    <span class="text">Lasă recenzie</span>
                                </span>
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Review 1 -->
                        <div class="col-md-6 mb-3">
                            <div class="review-item border rounded p-3">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="avatar me-2">
                                        <i class="bi bi-person-circle fs-4"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-bold">Deonis T.</h6>
                                        <small class="text-muted">1 zi în urmă</small>
                                    </div>
                                </div>
                                <div class="rating text-warning mb-2">
                                    <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                                </div>
                            </div>
                        </div>

                        <!-- Review 2 -->
                        <div class="col-md-6 mb-3">
                            <div class="review-item border rounded p-3">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="avatar me-2">
                                        <i class="bi bi-person-circle fs-4"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-bold">Gorea D.</h6>
                                        <small class="text-muted">1 zi în urmă</small>
                                    </div>
                                </div>
                                <div class="rating text-warning mb-2">
                                    <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-2">
                        <button class="btn btn-outline-secondary">
                            <i class="bi bi-chevron-down me-2"></i>
                            Vezi toate recenziile
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Contact and Schedule -->
        <div class="col-lg-4 d-none d-lg-block">
            <!-- Contact and Schedule Card -->
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 20px; z-index: 100;">
                <div class="card-body p-4">
                    <h4 class="mb-3 fw-bold">Contacte</h4>
                    <div class="d-flex align-items-center mb-4">
                        <div class="me-3">
                            <i class="bi bi-telephone fs-4"></i>
                        </div>
                        <div>
                            <span>+373 @Model.phoneNumber</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <div class="me-3">
                            <i class="bi bi-envelope fs-4"></i>
                        </div>
                        <div>
                            <span>@Model.email</span>
                        </div>
                    </div>
                    <a href="#" class="btn-31 booking-btn mb-2">
                        <span class="text-container">
                            <span class="text"><i class="bi bi-calendar-check me-2"></i>Rezervă</span>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

