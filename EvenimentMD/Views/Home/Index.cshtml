<body>
    <div class="container">
        <div class="row d-flex align-items-center hero-section">
            <!-- Image column - will disappear completely below 992px -->
            <div class="col-lg-6 d-none d-lg-block">
                <div class="img-presentation">
                    <img src="~/Resources/Home/event.png" alt="poză_eveniment" class="img-presentation-cover">
                </div>
            </div>

            <!-- Text and search column - will take full width below 992px -->
            <div class="col-lg-6 col-md-12">
                <div class="home_text_pres">
                    <h1 class="fw-bold">Servicii pentru orice eveniment</h1>
                    <h2>SIMPLU, RAPID, SIGUR!</h2>
                </div>
                <div class="search-container">
                    <div class="InputContainer">
                        <input placeholder="Search" id="input" class="input" name="text" type="text">
                        <label class="labelforsearch" for="input">
                            <svg class="searchIcon" viewBox="0 0 512 512">
                                <path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"></path>
                            </svg>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <section class="popular-services">
            <div class="container">
                <h2 class="title">SERVICII POPULARE</h2>
                <div class="row">
                    @{
                        for (int i = 0; i < 3; i++){
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="service-card">
                                    <div class="card-image">
                                        <img src="~/Resources/Home/decor.jpeg" alt="Serviciu">
                                    </div>
                                    <div class="card-category">
                                        <h5>Nume categorie</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    }             
                </div>
            </div>
        </section>

        <section class="recomanded-providers">
            <div class="container">
                <h2 class="title">PRESTATORI RECOMANDAȚI</h2>
                <div class="row g-4">
                    @{
                        for (int i = 0; i < 4; i++)
                        {
                            <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6 mb-4">
                                <a href="@Url.Action("Index", "ServicePage")">
                                    <div class="card h-100 service-card">
                                        <div class="position-relative">
                                            <img src="~/Resources/Services/themotans.jpg" class="card-img-top" alt="Nume Prestator">
                                            <div class="rating-badge">
                                                ⭐4.8
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title mb-2">Nume Prestator</h5>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="text-muted">Categorie: DJ</span>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </section>
    </div>
</body>